{
	"name": "Resource Provisioner Python Dev Container",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"containerEnv": {
    "PYTHONDONTWRITEBYTECODE": "1"
  	},
	"features": {
	  "ghcr.io/devcontainers-extra/features/black:2": {},
	  "ghcr.io/devcontainers-extra/features/pylint:2": {},
	  "ghcr.io/devcontainers-extra/features/ruff:1": {}
	},
	"customizations": {
	  "vscode": {
		"extensions": [
		  "ms-python.python",
		  "ms-python.vscode-pylance"
		],
		"settings": {
		  "python.testing.unittestEnabled": false,
		  "python.testing.pytestEnabled": true,
		  "python.testing.autoTestDiscoverOnSaveEnabled": true,
		  "python.linting.enabled": true,
		  "python.formatting.provider": "black"
		}
	  }
	},
	"postCreateCommand": "pip install -r requirements.txt && pip install pytest"
  }
  